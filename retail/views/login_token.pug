extends layout.pug

block content
    div.row
        div.col-md-8.col-md-offset-2
            div.panel.panel-default
                div.panel-heading Login
                div.panel-body
                    form(class="form-horizontal",method="POST",action="/dashboard/login/tkn")
                        div.form-group
                            label.col-lg-4.control-label token
                            div.col-lg-6
                                input(class="form-control",type="text",name="token")
                        div.form-group
                            div.col-md-6.col-md-offset-4
                                button.btn.btn-primary Login

